@model List<Doctor>

<h1>Doctores SQL Server/Oracle</h1>
<p>
	<a asp-controller="Doctores" asp-action="Create">
		Create New Doctor
	</a>
</p>
<table class="d-lg-table table-active">
	<thead>
		<tr>
			<th>Id doctor</th>
			<th>Apellido</th>
			<th>Especialidad</th>
			<th>Salario</th>
			<th>Hospital</th>
			<th>Accion</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Doctor doctor in Model)
		{
			<tr>
				<td>@doctor.IdDoctor</td>
				<td>@doctor.Apellido</td>
				<td>@doctor.Especialidad</td>
				<td>@doctor.Salario</td>
				<td>@doctor.IdHospital</td>
				<td>
					<button class="btn btn-outline-warning">
						<a asp-action="Update" asp-controller="Doctores" asp-route-iddoctor="@doctor.IdDoctor">Actualizar</a>
					</button>
					<button class="btn btn-outline-danger">
					<a asp-action="Delete" asp-controller="Doctores" asp-route-iddoctor="@doctor.IdDoctor">Borrar</a>
					</button>
				</td>
			</tr>
		}
	</tbody>
</table>
